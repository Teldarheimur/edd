fn main() unit {
    let array = [5, 2, 1, 5];
    print_some_numbies(array[:]);
    array[2] = 7;
    print_some_numbies(array[1:<3]);

    i_come_from_c(&array, 2);
}

fn print_some_numbies(slice: [&]i16)Â unit {
    if slice.len == 0: {}
    else {
        puti16(slice[0]);
        print_some_numbies(slice[1..]);
    }
}

fn i_come_from_c(ptr: [*]i16, len: u16) unit {
    let f = fn(p, l, i) {
        if i < 0: {
            puti16(p[i]);
            f(p, len, i+1);
        } else {}
    };
    f(ptr, len, 0);
}
